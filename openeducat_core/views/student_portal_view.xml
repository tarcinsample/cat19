<?xml version="1.0"?>
<odoo>

    <record id="student_portal_view" model="ir.ui.view">
        <field name="name">User portal</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='company_type']" position="replace">
                <div class="d-flex align-items-center gap-3">
                    <field name="company_type" widget="radio" options="{'horizontal': true}"/>
                    <field name="is_parent" nolabel="1"/>
                    <label for="is_parent" class="me-3">Parent</label>
                    <field name="is_student" nolabel="1"/>
                    <label for="is_student">Student</label>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
