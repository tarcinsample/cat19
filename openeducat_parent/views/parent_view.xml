<?xml version="1.0" encoding="UTF-8"?>
<odoo>

        <record model="ir.ui.view" id="parent_student_form_view">
            <field name="name">op.student.form</field>
            <field name="model">op.student</field>
            <field name="inherit_id" ref="openeducat_core.view_op_student_form"/>
            <field name="priority" eval="12"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="action_view_parents"
                        class="btn oe_stat_button"
                        icon="fa-users"
                        type="object"
                        groups="openeducat_parent.group_op_parent_manager">
                        <field name="parent_count" widget="statinfo" string="Parents"/>
                    </button>
                </xpath>
                <xpath expr="//field[@name='middle_name']" position="after">
                    <field name="parent_ids" widget="many2many_tags"/>
                </xpath>
            </field>
        </record>

        <record id="view_op_parent_tree" model="ir.ui.view">
            <field name="name">op.parent.list</field>
            <field name="model">op.parent</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <list string="Parents" default_order="name">
                    <field name="name" string="Parent Name"/>
                    <field name="relationship_id" string="Relationship"/>
                    <field name="mobile" string="Mobile" optional="show"/>
                    <field name="email" string="Email" optional="show"/>
                    <field name="student_count" string="Students" widget="badge" decoration-info="student_count &gt; 0"/>
                    <field name="user_id" string="Portal User" optional="hide"/>
                    <field name="active" invisible="1"/>
                </list>
            </field>
        </record>

        <record id="view_op_parent_form" model="ir.ui.view">
            <field name="name">op.parent.form</field>
            <field name="model">op.parent</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Parent Information">
                    <header>
                        <button type="object" name="create_parent_user"
                                string="Create Portal User"
                                groups="openeducat_parent.group_op_parent_manager"
                                class="oe_highlight"
                                invisible="user_id != False"
                                help="Create a portal user account for this parent"/>
                        <button type="object" name="action_view_students"
                                string="View Students"
                                class="btn-secondary"
                                invisible="student_count == 0"/>
                    </header>
                    <sheet>
                        <field name="active" invisible="1"/>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger"
                                invisible="active == True"/>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_students"
                                    class="oe_stat_button"
                                    icon="fa-graduation-cap"
                                    type="object"
                                    invisible="student_count == 0">
                                <field name="student_count" widget="statinfo" string="Students"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Select Parent..."/>
                            </h1>
                        </div>
                        <group>
                            <group string="Basic Information">
                                <field name="relationship_id" required="1" help="Type of relationship with student"/>
                                <field name="mobile" readonly="True" help="Mobile number from partner record"/>
                                <field name="email" readonly="True" help="Email address from partner record"/>
                            </group>
                            <group string="Portal Access">
                                <field name="user_id" readonly="1" help="Portal user account for parent access"/>
                                <label for="user_id" invisible="user_id != False" string="Portal Status"/>
                                <div invisible="user_id != False">
                                    <span class="text-warning">No portal access</span>
                                </div>
                            </group>
                        </group>
                        <notebook>
                            <page string="Students" name="students">
                                <field name="student_ids">
                                    <list>
                                        <field name="name"/>
                                        <field name="course_detail_ids" widget="many2many_tags"/>
                                        <field name="mobile" optional="show"/>
                                        <field name="email" optional="show"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_op_parent_search" model="ir.ui.view">
            <field name="name">op.parent.search</field>
            <field name="model">op.parent</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="Search Parents">
                    <field name="name" string="Parent Name" filter_domain="[('name.name', 'ilike', self)]"/>
                    <field name="relationship_id" string="Relationship"/>
                    <field name="student_ids" string="Student"/>
                    <field name="mobile" string="Mobile"/>
                    <field name="email" string="Email"/>
                    <separator/>
                    <filter string="With Portal Access" name="with_portal" domain="[('user_id', '!=', False)]"/>
                    <filter string="Without Portal Access" name="without_portal" domain="[('user_id', '=', False)]"/>
                    <separator/>
                    <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter string="Relationship Type" name="group_by_relationship"
                                domain="[]" context="{'group_by':'relationship_id'}"/>
                        <filter string="Portal Status" name="group_by_portal"
                                domain="[]" context="{'group_by':'user_id'}"/>
                        <filter string="Active Status" name="group_by_active"
                                domain="[]" context="{'group_by':'active'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_open_op_parent_view">
            <field name="name">Parents</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">op.parent</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">list,form</field>
            <field name="path">parent</field>
            <field name="search_view_id" ref="view_op_parent_search"/>
        </record>

        <record model="ir.actions.act_window.view" id="act_open_op_parent_view_form">
            <field name="act_window_id" ref="act_open_op_parent_view"/>
            <field name="sequence" eval="20"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_op_parent_form"/>
        </record>

        <record model="ir.actions.act_window.view" id="act_open_op_parent_view_tree">
            <field name="act_window_id" ref="act_open_op_parent_view"/>
            <field name="sequence" eval="10"/>
            <field name="view_mode">list</field>
            <field name="view_id" ref="view_op_parent_tree"/>
        </record>

</odoo>
