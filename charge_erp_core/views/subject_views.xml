<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_op_subject_list" model="ir.ui.view">
            <field name="name">op.subject.list</field>
            <field name="model">op.subject</field>
            <field name="arch" type="xml">
                <list string="Subjects">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="subject_type"/>
                </list>
            </field>
        </record>

        <record id="view_op_subject_form" model="ir.ui.view">
            <field name="name">op.subject.form</field>
            <field name="model">op.subject</field>
            <field name="arch" type="xml">
                <form string="Subject">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="subject_type"/>
                            <field name="grade_weightage"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_op_subject" model="ir.actions.act_window">
            <field name="name">Subjects</field>
            <field name="res_model">op.subject</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem id="menu_op_subject" name="Subjects"
            parent="menu_school_root"
            action="action_op_subject"
            sequence="40"/>

    </data>
</odoo>
