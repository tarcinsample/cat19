<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_op_academic_term_list" model="ir.ui.view">
            <field name="name">op.academic.term.list</field>
            <field name="model">op.academic.term</field>
            <field name="arch" type="xml">
                <list string="Academic Terms">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="academic_year_id"/>
                </list>
            </field>
        </record>

        <record id="view_op_academic_term_form" model="ir.ui.view">
            <field name="name">op.academic.term.form</field>
            <field name="model">op.academic.term</field>
            <field name="arch" type="xml">
                <form string="Academic Term">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="academic_year_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_op_academic_term" model="ir.actions.act_window">
            <field name="name">Academic Terms</field>
            <field name="res_model">op.academic.term</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem id="menu_op_academic_term" name="Academic Terms"
            parent="menu_school_root"
            action="action_op_academic_term"
            sequence="100"/>

    </data>
</odoo>
