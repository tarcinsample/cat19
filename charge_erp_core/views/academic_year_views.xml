<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_op_academic_year_list" model="ir.ui.view">
            <field name="name">op.academic.year.list</field>
            <field name="model">op.academic.year</field>
            <field name="arch" type="xml">
                <list string="Academic Years">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                </list>
            </field>
        </record>

        <record id="view_op_academic_year_form" model="ir.ui.view">
            <field name="name">op.academic.year.form</field>
            <field name="model">op.academic.year</field>
            <field name="arch" type="xml">
                <form string="Academic Year">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="start_date"/>
                            <field name="end_date"/>
                        </group>
                        <notebook>
                            <page string="Terms">
                                <field name="term_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_op_academic_year" model="ir.actions.act_window">
            <field name="name">Academic Years</field>
            <field name="res_model">op.academic.year</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem id="menu_op_academic_year" name="Academic Years"
            parent="menu_school_root"
            action="action_op_academic_year"
            sequence="90"/>

    </data>
</odoo>
