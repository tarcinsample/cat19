<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_op_student_list" model="ir.ui.view">
            <field name="name">op.student.list</field>
            <field name="model">op.student</field>
            <field name="arch" type="xml">
                <list string="Students">
                    <field name="name"/>
                    <field name="student_id"/>
                </list>
            </field>
        </record>

        <record id="view_op_student_form" model="ir.ui.view">
            <field name="name">op.student.form</field>
            <field name="model">op.student</field>
            <field name="arch" type="xml">
                <form string="Student">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="student_id"/>
                            </group>
                            <group>
                                <field name="email"/>
                                <field name="phone"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_op_student" model="ir.actions.act_window">
            <field name="name">Students</field>
            <field name="res_model">op.student</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem id="menu_school_root" name="School" sequence="10"/>

        <menuitem id="menu_op_student" name="Students"
            parent="menu_school_root"
            action="action_op_student"
            sequence="10"/>

    </data>
</odoo>
